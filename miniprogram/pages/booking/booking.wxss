.booking-bg{
  height: 180rpx;
  background-color:#1296db ;
}
.booking-box{
  position: relative;
  padding: 20rpx;
  top: -90rpx;
}
.booking-box-title{
  background-color: #fff;
  padding-top: 30rpx;
  border-radius: 20rpx;
}
.title{
  width: 200rpx;
  overflow: hidden;
  margin: 0 auto;
  border: 1rpx solid #57b8ec;
  border-radius: 30rpx;
}
.title-item{
  width: 50%;
  height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.title-item.active{
  background-color:#57b8ec ;
}

.icons-box{
  margin-top: 30rpx;
}
.icons-item{
  width: 20%;
  margin-bottom: 30rpx;
}

.item-box{
  width: 60rpx;
  margin:0 auto;
  transition:transform .1s linear;
}
.item-box.active{
  transform:scale(1.3)
}

.item-box-img{
  height: 60rpx;
  background-color: #f8f8f8;
  border-radius: 50%;
}
.item-img{
  height: 60rpx;
}
.item-box-text{
  text-align: center;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.account{
  background-color:#fff;
  margin-top: 20rpx;
  border-radius: 20rpx;
  padding:  0 20rpx;
}

.account-title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  border-bottom: 1px solid #ccc;
}
.account-items{
  padding: 20rpx 0;
}
.account-item{
  width: calc(20% - 20rpx);
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  font-size: 24rpx;
  background-color: rgb(231, 230, 230);
  margin: 0 10rpx;
  border-radius: 24rpx;
}
.account-item.active{
  background-color: #57b8ec;
}

.booking-info{
  margin-top: 20rpx;
  background-color: #fff;
  padding: 20rpx;
  border-radius: 20rpx;
}
.item-title{
  font-size: 28rpx;
  width: 80rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.item-date{
  width: calc(100% - 80rpx);
  height: 60rpx;
}
.picker-box{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #808080;
}
.item-input{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.sava{
  background-color: #57b8ec;
  font-size: 32rpx;
  border-radius: 20rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin-top: 80rpx;
}